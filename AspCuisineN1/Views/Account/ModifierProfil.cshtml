@model AspCuisineN1.Models.Poko.CUtilisateur
@{
    ViewBag.Title = "Modifier Profil";
}

<div class="container">
    <h2>Modifier Profil</h2>
    @using (Html.BeginForm("ModifierProfilVerif", "Account"))
    {
        <div class="form-group hidden">
            @Html.LabelFor(model => model.Id)
            @Html.TextBoxFor(model => model.Id, new { disabled = "disabled" })
            @Html.ValidationMessageFor(model => model.Id)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Nom)
            @Html.TextBoxFor(model => model.Nom)
            @Html.ValidationMessageFor(model => model.Nom)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Prenom)
            @Html.TextBoxFor(model => model.Prenom)
            @Html.ValidationMessageFor(model => model.Prenom)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.MotDePass)
            @Html.TextBoxFor(model => model.MotDePass)
            @Html.ValidationMessageFor(model => model.MotDePass)
        </div>
        <div class="form-group>
            @Html.LabelFor(model => model.Role)
            @Html.TextBoxFor(model => model.Role, new { disabled = "disabled" })
            @Html.ValidationMessageFor(model => model.Role)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.NumTel)
            @Html.TextBoxFor(model => model.NumTel)
            @Html.ValidationMessageFor(model => model.NumTel)
        </div>

        <div class="form-group">
            <input type="submit" value="Sauvegarder" />
        </div>
    }
</div>
